      <command categoryId="com.visus.gradle.commands.visus"
               id="com.visus.menu.action.CleanAction"
               name="Clean Gradle output (dir: build)">
      </command>
      <command categoryId="com.visus.gradle.commands.visus"
               id="com.visus.menu.action.GenerateJarAction"
               name="Generate JAR using Gradle">
      </command>
      <command categoryId="com.visus.gradle.commands.visus"
